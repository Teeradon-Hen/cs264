            <div style=" padding-left: 25%" >
              <div class = 'row' >
                <div class="col-sm-3" >
                  <div class="next" >
                    <form  action = '/lateRegis' method = 'GET' >
                      <button class='button2' type = 'submit' >เเก้ไข</button><br><br>
                    </form>
                  </div>
                </div>
                <div class="col-sm-3" >
                  <div class="next" >
                    <form  action = '/reason' method = 'GET' >
                      <button class='button1' type = 'submit' >ส่ง</button> </div>
                    </form>
                  </div>
                </div>


              </div>
              
              
              
            </div>  
            
          
          
   
        
            <img class= 'stuImg' src = 'https://web.reg.tu.ac.th/registrar/getstudentimage.asp?id=<%=username%>&amp;Status=10' >
        



                
          </div>
      </div>
      
      
    </div>
  
  


</body>
</html>